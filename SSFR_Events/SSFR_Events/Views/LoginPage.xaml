<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SSFR_Events.Views.LoginPage"
             xmlns:local="clr-namespace:SSFR_Events.CustomRenderers"
             NavigationPage.HasBackButton="False"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="Black">
    <ContentPage.Content>
        <AbsoluteLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" AbsoluteLayout.LayoutBounds="0.5, 0.5, 1, 1" AbsoluteLayout.LayoutFlags="All">

            <Image x:Name="LockerLogo" AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0.5, 0.2, 1, 1"/>

            <Frame x:Name="CenteredFrame" BackgroundColor="#707070" AbsoluteLayout.LayoutBounds="0.5, 0.5, 0.8, 0.6" AbsoluteLayout.LayoutFlags="All" HasShadow="True">

                <Grid x:Name="Grid" RowSpacing="10">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                  
                    <Label Text="Login" FontFamily="Century Gothic" HorizontalOptions="Center" FontAttributes="Bold" HorizontalTextAlignment="Center" TextColor="#FFA500" FontSize="22" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2"/>

                    <Label Text="Usuario" FontFamily="Century Gothic" HorizontalOptions="Center" HorizontalTextAlignment="Center" TextColor="#FFA500" FontSize="16" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2"/>

                    <Entry Text="" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2" WidthRequest="180"/>

                    <Label Text="Contraseña" FontFamily="Century Gothic" HorizontalOptions="Center" HorizontalTextAlignment="Center" TextColor="#FFA500" FontSize="16" Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2"/>

                    <Entry Text="" TextColor="White" HorizontalOptions="Center" Grid.Column="0" IsPassword="True" Grid.ColumnSpan="2" Grid.Row="4" WidthRequest="180"/>

                    <local:CheckBox Color="#FFA500" Grid.Column="0" Grid.Row="5"/>

                    <Label Text="¿Admin?, seleccioname" HorizontalTextAlignment="Center" Grid.Column="1" Grid.Row="5" TextColor="#FFA500"/>

                    <Button Text="Log In" BackgroundColor="#FFA500" TextColor="White" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="6" HorizontalOptions="Center"/>

                </Grid>

            </Frame>

        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>