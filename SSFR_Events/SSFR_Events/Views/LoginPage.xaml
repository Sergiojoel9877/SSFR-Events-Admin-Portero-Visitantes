<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SSFR_Events.Views.LoginPage"
             xmlns:local="clr-namespace:SSFR_Events.CustomRenderers"
             NavigationPage.HasBackButton="False"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="Black">
    <ContentPage.Content>
        <AbsoluteLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" AbsoluteLayout.LayoutBounds="0.5, 0.5, 1, 1" AbsoluteLayout.LayoutFlags="All">

            <Image x:Name="LockerLogo" AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0.5, 0.2, 1, 1"/>

            <Frame x:Name="CenteredFrame" BackgroundColor="#707070" AbsoluteLayout.LayoutBounds="0.5, 0.5, 0.8, 0.6" AbsoluteLayout.LayoutFlags="All" HasShadow="True" CornerRadius="15">

                <Grid x:Name="Grid">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                  
                    <Label Text="Login" FontFamily="Century Gothic" HorizontalOptions="Center" FontAttributes="Bold" HorizontalTextAlignment="Center" TextColor="#FFA500" FontSize="24" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2"/>

                    <StackLayout Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Orientation="Vertical">

                        <Label Text="Usuario" FontFamily="Century Gothic" HorizontalOptions="Center" HorizontalTextAlignment="Center" TextColor="#FFA500" FontSize="16"/>

                        <Entry Text="" TextColor="White" HeightRequest="50" HorizontalOptions="Center" WidthRequest="180"/>

                    </StackLayout>

                    <StackLayout Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2" Orientation="Vertical">

                        <Label Text="Contraseña" FontFamily="Century Gothic" HorizontalOptions="Center" HorizontalTextAlignment="Center" TextColor="#FFA500" FontSize="16"/>

                        <Entry Text="" TextColor="White"  HeightRequest="50" HorizontalOptions="Center" IsPassword="True" WidthRequest="180"/>

                    </StackLayout>

                    <StackLayout Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="5" HorizontalOptions="Center" Orientation="Horizontal">

                        <local:CheckBox IsChecked="False" Color="#FFA500"/>

                        <Label Text="¿Admin?, seleccioname" LineBreakMode="NoWrap" VerticalOptions="Center" TextColor="#FFA500"/>

                    </StackLayout>

                    <Button Text="Log In" BackgroundColor="#FFA500" TextColor="White" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="6" HorizontalOptions="Center"/>

                </Grid>

            </Frame>

        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>