<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SSFR_Events.Views.MainPanelPage"
             Title="¡Crea el evento de tu preferencia!"
             BackgroundColor="#000"
             >
    <ContentPage.Content>
        <AbsoluteLayout AbsoluteLayout.LayoutBounds="0.5, 0.5, 1, 1" AbsoluteLayout.LayoutFlags="All">

            <StackLayout x:Name="AniversaryLayout" AbsoluteLayout.LayoutBounds="0.5, 0.4, 0.4, 0.3" AbsoluteLayout.LayoutFlags="All">
                    
                <Image Source="{Binding AniversaryImage}" WidthRequest="258" HeightRequest="194"/>
                    
            </StackLayout>

            <StackLayout x:Name="MarryAgImage" >

                <Image Source="{Binding Binding MarryageImage}" WidthRequest="258" HeightRequest="194"/>

            </StackLayout>

        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>