<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SSFR_Events.Views.GuestToArrivePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SSFR_Events.CustomRenderers"
    BackgroundColor="#000">
    <ContentPage.Content>
        <StackLayout x:Name="Stack">

            <Frame
                x:Name="CenteredFrame"
                Margin="16,15,16,0"
                BackgroundColor="#212121"
                CornerRadius="25"
                HasShadow="True"
                HorizontalOptions="Center">

                <Grid>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Frame
                        Grid.Row="0"
                        Grid.Column="0"
                        Padding="2"
                        BackgroundColor="#131212"
                        CornerRadius="25"
                        HasShadow="False"
                        HorizontalOptions="Center"
                        WidthRequest="220">

                        <local:TransparentEditor
                            x:Name="NameEntry"
                            FontAttributes="Bold"
                            FontSize="18"
                            HorizontalTextAlignment="Center"
                            Placeholder="Nombre del evento"
                            PlaceholderColor="#FFA500"
                            Text="{Binding Name}"
                            TextColor="#FFA500"
                            VerticalOptions="End" />

                    </Frame>

                    <Image
                        Grid.Row="0"
                        Grid.Column="1"
                        HeightRequest="50"
                        Source="buscar.png"
                        VerticalOptions="Center"
                        WidthRequest="50">

                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Search}" />
                        </Image.GestureRecognizers>

                    </Image>

                </Grid>

            </Frame>

            <Frame
                x:Name="guestList"
                Margin="16,15,16,0"
                BackgroundColor="#212121"
                CornerRadius="25"
                HasShadow="True"
                HorizontalOptions="Center">

                <ListView x:Name="GuestListView" ItemsSource="{Binding GuestList}">
                    <ListView.Header>
                        <StackLayout Orientation="Horizontal" Spacing="120">
                            <Label
                                FontAttributes="Bold"
                                FontSize="Medium"
                                Text="Nombre(s)"
                                TextColor="Orange" />
                            <Label
                                FontAttributes="Bold"
                                FontSize="Medium"
                                Text="Apellidos"
                                TextColor="Orange" />
                        </StackLayout>
                    </ListView.Header>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <ViewCell.View>

                                    <Grid Margin="0,5,0,0" Padding="5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1.5*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <Label
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            FontAttributes="Bold"
                                            FontSize="Small"
                                            HorizontalTextAlignment="Start"
                                            Text="{Binding Name}"
                                            TextColor="#FFA500" />

                                        <Label
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            FontAttributes="Bold"
                                            FontSize="Small"
                                            HorizontalTextAlignment="Start"
                                            Text="{Binding LastName}"
                                            TextColor="#FFA500" />

                                    </Grid>

                                </ViewCell.View>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>